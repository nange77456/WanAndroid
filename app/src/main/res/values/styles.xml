<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMiddle</item>
        <item name="colorPrimaryDark">@color/colorDark</item>
        <item name="colorAccent">@color/colorLight</item>
    </style>

    <style name="DoubleTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorOrange</item>
        <item name="colorPrimaryDark">@color/colorOrange</item>
        <item name="colorAccent">@color/colorLight</item>
    </style>

    <style name="TabTextTheme">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="ChipTheme">
        <item name="android:textSize">12sp</item>
    </style>
</resources>